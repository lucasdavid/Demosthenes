@model IPagedList<Professor>

@{
    ViewBag.Title = "Professors";
    ViewBag.Lead = "";
}

@section scripts {
    @Scripts.Render("~/Scripts/app/elements/btn-submitter.js")
    @Scripts.Render("~/Scripts/app/ajax/search.js")
}

@Html.Partial("_Title")

<div class="row">
    <div class="col-md-10">
        @Html.Partial("_Search", "/Professors")
    </div>
    <div class="col-md-2 text-right">
        <a href="@Url.Action("Create")" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-plus"></span> Create professor</a>
    </div>
</div>

@if (User.IsInRole("admin"))
{
    <p>@Html.ActionLink("Create New", "Create")</p>
}

<div id="list-search">
    @Html.Partial("_List", Model)
</div>
