<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Demosthenes</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Demosthenes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @if (User.IsInRole("admin"))
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Administration <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Posts", "Index", "Posts")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Administrators", "Index", "Users")</li>
                                <li>@Html.ActionLink("Professors", "Index", "Professors")</li>
                                <li>@Html.ActionLink("Students", "Index", "Students")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Departments", "Index", "Departments")</li>
                                <li>@Html.ActionLink("Courses", "Index", "Courses")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Classes", "Index", "Classes")</li>
                                <li>@Html.ActionLink("Schedules", "Index", "Schedules")</li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-xs-6">
                    @Html.ActionLink("About", "About", "Home")
                    | @Html.ActionLink("Contact", "Contact", "Home")
                </div>
                <div class="col-xs-6 text-right">
                    &copy; @DateTime.Now.Year - Demosthenes
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
