@{
    ViewBag.Title = ViewBag.Title ?? "Demosthenes";
}
<!DOCTYPE html>
<html ng-app="demosthenesApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/#/" class="navbar-brand" title="Demosthenes - Home page.">
                    <span class="glyphicon glyphicon-knight"></span>
                </a>
            </div>
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="" role="button" aria-expanded="false">
                            Administration <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#courses"><span class="glyphicon glyphicon-pencil"></span> Courses</a></li>
                            <li><a href="#classes"><span class="glyphicon glyphicon-book"></span> Classes</a></li>
                            <li><a href="#schedules"><span class="glyphicon glyphicon-time"></span> Schedules</a></li>
                            <li><a href="#students"><span class="glyphicon glyphicon-user"></span> Students</a></li>
                            <li><a href="/#departments"><span class="glyphicon glyphicon-list"></span> Departments</a></li>
                            <li><a href="#courses"><span class="glyphicon glyphicon-tree-deciduous"></span> Places</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="">Sign in</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <br />

    @RenderBody()

    <div class="container">
        <hr />
        <footer class="text-right">
            <a href="/Help">API</a> |
            &copy; @DateTime.Now.Year - Demosthenes
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
</body>
</html>
