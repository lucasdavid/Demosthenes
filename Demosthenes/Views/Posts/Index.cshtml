@model IEnumerable<Demosthenes.Core.Models.Post>

@{
    ViewBag.Title = "Shared posts";
}

@Html.Partial("_Title")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })

                @if (User.IsInRole("admin") || item.AuthorId == User.Identity.GetUserId())
                {
                    if (item.AuthorId == User.Identity.GetUserId())
                    {
                        <span>|</span> @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    }

                    <span>|</span> @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
