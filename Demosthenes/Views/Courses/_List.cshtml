@model IPagedList<Course>

@Html.Partial("_PagedListPager", Model)

@if (Model.Count == 0)
{
    if (String.IsNullOrEmpty(ViewBag.q))
    {
        @Html.Partial("_AlertNoRecords", "course")
    }
    else
    {
        @Html.Partial("_AlertEmptySearch", "course")
    }
}

@foreach (var item in Model)
{
    <div class="pagedListItem">
        <h3>
            @Html.DisplayFor(modelItem => item.Title)
            <small>@Html.DisplayFor(modelItem => item.Department.Name)</small>
        </h3>
        <p>
            @Html.DisplayFor(modelItem => item.Details)
        </p>

        @using (Html.BeginForm("Delete", "Courses", FormMethod.Post, new { id = "delete" + item.Id + "Form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("Id", item.Id)

            <a href="/Courses/Edit/@item.Id" class="btn btn-default"
               title="Edit @item.Title"><span class="glyphicon glyphicon-edit"></span> Edit</a>
            <a href="#" title="Delete @item.Title"
               class="btn btn-danger btn-submitter"><span class="glyphicon glyphicon-floppy-remove"></span> Delete</a>
        }
    </div>
}