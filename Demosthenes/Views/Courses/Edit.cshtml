@model Demosthenes.Core.Models.Course

@{
    ViewBag.Title = "Edit";
    ViewBag.Lead = Model.Title;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DepartmentId, "DepartmentId", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group text-right">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}
