@model IPagedList<Student>

@Html.Partial("_PagedListPager", Model)

@if (Model.Count == 0)
{
    if (String.IsNullOrEmpty(ViewBag.q))
    {
        @Html.Partial("_AlertNoRecords", "student")
    }
    else
    {
        @Html.Partial("_AlertEmptySearch", "student")
    }
}

@foreach (var item in Model)
{
    <div class="pagedListItem">
        <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
        <p>
            @Html.DisplayFor(modelItem => item.Email)
        </p>
        <p>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </p>

        <p>
            @Html.DisplayFor(modelItem => item.DateBorn)
        </p>
        
        @if (User.IsInRole("admin"))
        {
            using (Html.BeginForm("Delete", "Students", FormMethod.Post, new { id = "delete" + item.Id + "Form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("Id", item.Id)

                <a href="/Students/Edit/@item.Id" class="btn btn-default"
                   title="Edit @item.Name"><span class="glyphicon glyphicon-edit"></span></a>
                <a href="#" title="Delete @item.Name"
                   class="btn btn-danger btn-submitter"><span class="glyphicon glyphicon-floppy-remove"></span></a>
            }
        }
    </div>
}

