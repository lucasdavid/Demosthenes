@model IEnumerable<Demosthenes.Core.Models.Schedule>

@{
    ViewBag.Title = "Schedules available";
}

@Html.Partial("_Title")

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Starting)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ending)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Starting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ending)
            </td>
            <td>
                @using (Html.BeginForm("Delete", "Schedules", FormMethod.Post, new { id = "delete" + @item.Id + "Form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Id", item.Id)

                    <a href="/Schedules/Edit/@item.Id" class="btn btn-primary btn-sm"
                       title="Edit schedule"><span class="glyphicon glyphicon-edit"></span></a>
                    <a href="javascript:document.getElementById('delete@(item.Id)Form').submit()"
                       title="Delete schedule" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-floppy-remove"></span></a>
                }
            </td>
        </tr>
    }
</table>
